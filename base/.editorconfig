root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.{ba,z}sh]
indent_style = tab

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

[*.{c,h,swift}]
indent_style = tab
max_line_length = 120

[*.rs]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
