#!/bin/sh

surround() {
  echo "%C(reset)%C(bold yellow)──(%C(reset)${1}%C(reset)%C(bold yellow))"
}

refNames='%C(auto)%d'
message='%s'
author=`surround '%C(bold cyan)%aN'`
sha=`surround '%C(bold red)%h'`
relativeTime=`surround '%C(bold green)%cr'`

logFormat="$refNames $message$relativeTime$sha$author"

git log --graph --date-order --all --pretty="format:$logFormat" $*
