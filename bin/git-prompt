#! sh

status=`\`which git\` status --short --branch 2> /dev/null`
echo $status

if [[ $status =~ "?? " ]]; then
  added='+'
fi
if [[ $status =~ " D " ]]; then
  deleted='-'
fi
if [[ -n "$added" && -n "$deleted" ]]; then
  addition='Â±'
else
  addition="$added$deleted"
fi


if [[ $status =~ " M \|A  " ]]; then
  modified='*'
fi

if [[ `echo $status | grep 'both modified:'` != "" ]]; then
  conflict='ðŸ’¥'
fi

# [behind 1]
# [ahead 1]


echo "$addition$modified$conflict$divergence"
