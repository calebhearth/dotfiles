#!/bin/sh
#
# Find and replace by a given list of files.
#
# git sub foo bar **/*.rb

set -e

if ! git diff --exit-code > /dev/null; then
	>&2 echo "Working directory dirty. Please stage, stash, or commit changes."
	exit 1
fi

find_this="$1"
shift
replace_with="$1"
shift

# check if rg is executable
if command -v rg >/dev/null 2>&1; then
  rg --files-with-matches --color=never "$find_this" "$@"
else
  ag -l --nocolor "$find_this" "$@"
fi | xargs sed -i '' "s/$find_this/$replace_with/g"
