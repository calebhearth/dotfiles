
[core]
  pager=delta

[delta]
  features = side-by-side defaults collared-trogon
  hyperlinks = true
  hyperlinks-commit-link-format='https://gitlab.av/repository/files-rails/-/tree/{commit}'
  hyperlinks-file-link-format = "https://gitlab.av/repository/files-rails/-/tree/master/{path}#L{line}"
  line-numbers = true
  navigate = true
  side-by-side = true
  syntax-theme = Nord

[delta "collared-trogon"]
  # author: https://github.com/clnoll
  commit-decoration-style = bold box ul
  dark = true
  file-decoration-style = none
  file-style = syntax
  hunk-header-decoration-style = "#022b45" box ul
  hunk-header-file-style = "#999999"
  hunk-header-line-number-style = bold "#003300"
  hunk-header-style = file line-number syntax
  line-numbers = true
  line-numbers-left-format = {nm:<4}
  line-numbers-left-style = "#022b45"
  line-numbers-minus-style = "#80002a"
  line-numbers-plus-style = "#003300"
  line-numbers-right-format = {np:<4}
  line-numbers-right-style = "#022b45"
  line-numbers-zero-style = "#999999"
  minus-emph-style = syntax "#80002a"
  minus-style = syntax "#330011"
  plus-emph-style = syntax "#003300"
  plus-style = syntax "#001a00"
  syntax-theme = Nord

[diff]
  colorMoved = default

[interactive]
  diffFilter = delta --color-only
