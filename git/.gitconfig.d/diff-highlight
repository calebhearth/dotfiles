[color "diff-highlight"]
  oldNormal = "#c9d1d9 #1b100a"
  oldHighlight = "#c9d1d9 #432e21 bold"
  oldReset = "default"
  newNormal = "#c9d1d9 #0a1423"
  newHighlight = "#c9d1d9 #233653 bold"
  newReset = "default"

[core]
  pager = diff-highlight | less --quit-if-one-screen --RAW-CONTROL-CHARS --no-init --tabs=2,4

[interactive]
  ; diffFilter = diff-highlight | less --quit-if-one-screen --RAW-CONTROL-CHARS --no-init --tabs=2,4
