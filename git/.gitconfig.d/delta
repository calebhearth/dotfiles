[core]
  pager=delta

[delta]
  features = side-by-side defaults collared-trogon
  hyperlinks = true
  line-numbers = true
  navigate = true
  side-by-side = true
  syntax-theme = Nord

[delta "collared-trogon"]
  # author: https://github.com/clnoll
  commit-decoration-style = bold box ul
  dark = true
  file-decoration-style = none
  file-style = syntax
  hunk-header-decoration-style = "#022b45" box ul
  hunk-header-file-style = "#999999"
  hunk-header-line-number-style = bold "#003300"
  hunk-header-style = file line-number syntax
  line-numbers = true
  line-numbers-left-format = {nm:<4}
  line-numbers-left-style = "#022b45"
  line-numbers-minus-style = "#463023"
  line-numbers-plus-style = "#273C5B"
  line-numbers-right-format = {np:<4}
  line-numbers-right-style = "#022b45"
  line-numbers-zero-style = "#999999"
  minus-emph-style = syntax "#463023"
  minus-style = syntax "#463023"
  plus-emph-style = syntax bold "#273C5B"
  plus-style = syntax "#273C5B "
  syntax-theme = Nord

[interactive]
  diffFilter = delta --color-only
